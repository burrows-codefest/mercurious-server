<div class="row">
    <div class="col-sm-4 col-sm-offset-4 login-box">
        <form method="post" role="form" action="login">
            <div class="form-group {{#if formErrors.username}}has-error{{/if}}">
                <label class="sr-only" for="username">Username</label>
                <input class="form-control" id="username" name="username" placeholder="Username" type="text"/>
                {{#if formErrors.username}}<span class="help-block">{{formErrors.username}}</span>{{/if}}
            </div>
            <div class="form-group {{#if formErrors.password}}has-error{{/if}}">
                <label class="sr-only" for="password">Password</label>
                <input class="form-control" id="password" name="password" placeholder="Password" type="password"/>
                {{#if formErrors.password}}<span class="help-block">{{formErrors.password}}</span>{{/if}}
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
